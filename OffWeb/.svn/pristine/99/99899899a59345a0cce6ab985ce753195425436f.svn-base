#cart_table{
	font-size:12px;
}
#cart_table img{
	max-width:90px;
}
#cart_table .panel-heading{
	padding-top:0px;
	padding-bottom:0px;
}
#cart_table .panel {
	margin-bottom: 10px;
}
#cart_table .panel-body {
	padding-top:10px;
	padding-bottom:5px;
} 

.cart-title{
	padding:6px 15px 6px;
	margin-bottom:10px;
}
#cart_table .panel-body .remainder{height:26px;}
#cart_table .cart-detail,.trade-detail{
	line-height:30px;
}
#cart_table .panel-body .select-radio a:hover{
	border: 1px solid #cccccc!important;
	padding: 1px 9px!important;
}
#cart_table .trade-detail .trade-prod{
	border-top:1px solid #dddddd;
	border-right:1px solid #dddddd;
	margin-top:-1px;
	padding:5px;
}
#cart_table .trade-detail .trade-total{
	border-top:1px solid #dddddd;
	border-left:1px solid #dddddd;
	margin-left:-1px;
	height:100%;
	margin-top:-1px;
}
#cart_table .order-title{
	border-bottom:1px dashed #CCC;
	padding:5px;
	border-left: 3px solid #ff4a00;
	padding-left: 6px;
	margin-bottom:20px;
	font-size:16px;
}

/**个人中心添加地址**/
.table-hover .idefault{display:none;}
.table-hover>tbody>tr:hover>td>.idefault{display:block;}
#infoHtml .product-img img{height:150px; width:150px;}
#infoHtml .product{height:280px;}
#infoHtml .floor-content .pagination{padding:10px;}
#accordion1 .selected {border-left:3px solid #B20000;margin-left:-1px;border-radius: 0px!important;color:#B20000;}
.person-info-menu{cursor: pointer;}
/***地址页面*******/
#select-area select{
	width:33.333333333%!important;
	margin-right:-1px;
}
.delete-store:hover>.cancelColl{
	display:block;
}
.product .cancelColl{
	height:36px;
	line-height:36px;
	left:6px;
	right:6px;
	background-image: url("../images/pricebg.png");
	cursor:pointer;
	color:#999;
	position:absolute;bottom:6px;display: none;
}

/**********新闻页面****************/
.news-list{
	border-bottom:1px dotted #DDD;padding:12px 0px 12px 0px;
}
.news-list .news-date{
	color:#888 !important;
}
.news-detail{
	overflow:hidden;
}
.news-detail img{
	max-width:100%;
}
/*******************新闻评论****************************/
.box-heading{
	border-bottom:2px solid #B20000;
}

.user-info .iconfont {
  cursor: pointer;
}

/*************评论商品*********/
.rate-product .iconfont{
	cursor: pointer;
	font-size:18px;
	font-weight:bold;
}

@media ( max-width : 767px) {
	#cart_table .panel-body>div{text-align:center;}
	#cart_table img{
		max-width:100%;
		max-height:160px;
	}
	.trade-detail .trade-prod{
		margin-right:-1px;
	}
}
/*****************修改密码页面modifyPass.jsp***********/
#modifyPass_form label{
	font-weight: 100!important;
}
/******************成为代理页面agentJoin.jsp**********/
#agent_form label{
	font-weight: 100!important;
}
.file{
	cursor: pointer;
}
.upload-agent-img img{
	max-height:80px;
	max-width:100%;
	cursor: pointer;
}
/****************收货地址页面addressInfo.jsp**************/
#address_form label{
	font-weight: 100!important;
}
